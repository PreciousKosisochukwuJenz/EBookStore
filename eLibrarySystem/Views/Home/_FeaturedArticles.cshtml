@model eLibrarySystem.Areas.Admin.ViewModels.HomeModel

@{
    if (Model.FeaturedArticles != null)
    {
        <div class="col-md-12">
            <h4>Featured Article</h4><hr />
        </div>
        <div class="row">
            @foreach (var featuredarticle in Model.FeaturedArticles)
            {
                string ArticleImageBase64 = Convert.ToBase64String(featuredarticle.Image);
                string ArticleImageSrc = string.Format("data:image/gif;base64,{0}", ArticleImageBase64);
                <div class="col-md-3">
                    <div class="main-card mb-2 card">
                        <div class="card-body">
                            <h4 class="card-title">@featuredarticle.Description</h4><small> - @featuredarticle.SubCategory</small>
                            <div class="divider"></div>
                            <div class="slick-slider">
                                <div>
                                    <div class="" style="height:120px;">
                                        <img src="@ArticleImageSrc" style="height:100px; width:100%;" />
                                    </div>
                                </div>
                            </div>
                            <button class="btn-hover-shine btn btn-shadow btn-primary btn-block">Read</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

}