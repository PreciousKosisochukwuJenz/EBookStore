@model eLibrarySystem.Areas.Admin.ViewModels.HomeModel
@using System.Web.Optimization;

<div class="new_arrivals">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="tabbed_container">
                    <div class="tabs clearfix tabs-right">
                        <div class="new_arrivals_title">Hot New Arrivals</div>
                        <ul class="clearfix">
                            <li class="active">Featured</li>
                        </ul>
                        <div class="tabs_line"><span></span></div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12" style="z-index:1;">

                            <!-- Product Panel -->
                            <div class="product_panel panel active">
                                <div class="arrivals_slider slider">
                                    @{
                                        if (Model.NewRandowmBooks != null)
                                        {
                                            foreach (var book in Model.NewRandowmBooks)
                                            {
                                                string FrontCoverBase64 = Convert.ToBase64String(book.FrontCover);
                                                string FrontCoverSrc = string.Format("data:image/gif;base64,{0}", FrontCoverBase64);
                                                <!-- Slider Item -->
                                                <div class="slider_item">
                                                    <div class="border_active"></div>
                                                    <div class="product_item is_new d-flex flex-column align-items-center justify-content-center text-center">
                                                        <div class="product_image d-flex flex-column align-items-center justify-content-center"><img src="@FrontCoverSrc" style="height:160px" alt="image"></div>
                                                        <div class="product_content">
                                                            <div class="product_price" style="font-size:10px">@book.Author</div>
                                                            <div class="product_name"><div><a href="@Url.Action("ViewBook","Book",new { id= book.Id })" tabindex="0">@book.Name</a></div></div>
                                                            <div class="product_extras">
                                                                <button class="product_cart_button btn-hover-shine  btn-shadow" onclick="CheckIfSessionExists()">Add to Cart</button>
                                                            </div>
                                                        </div>
                                                        <div class="product_fav" data-id="@book.Id"><i class="fas fa-heart"></i></div>
                                                        <ul class="product_marks">
                                                            <li class="product_mark product_discount">-25%</li>
                                                            <li class="product_mark product_new">new</li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            }
                                        }
                                    }
                                </div>
                                <div class="arrivals_slider_dots_cover"></div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/jquery-unobtrusive-ajax")
@Scripts.Render("~/bundles/slick")
@Scripts.Render("~/bundles/custom")


