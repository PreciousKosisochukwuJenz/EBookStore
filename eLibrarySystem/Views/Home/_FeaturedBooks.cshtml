@model eLibrarySystem.Areas.Admin.ViewModels.HomeModel

<div class="best_sellers">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="tabbed_container">
                    <div class="tabs clearfix tabs-right">
                        <div class="new_arrivals_title">Hot Featured</div>
                        <ul class="clearfix">
                            <li class="active">Top 20</li>
                            <li>Best Selling</li>
                        </ul>
                        <div class="tabs_line"><span></span></div>
                    </div>

                    <div class="bestsellers_panel panel active">

                        <!-- Best Sellers Slider -->

                        <div class="bestsellers_slider slider">

                            @{
                                if (Model.FeaturedBooks != null)
                                {
                                    foreach (var fbook in Model.FeaturedBooks)
                                    {
                                        string FrontCoverBase64 = Convert.ToBase64String(fbook.FrontCover);
                                        string FrontCoverSrc = string.Format("data:image/gif;base64,{0}", FrontCoverBase64);
                                        <!-- Best Sellers Item -->
                                        <div class="bestsellers_item discount">
                                            <div class="bestsellers_item_container d-flex flex-row align-items-center justify-content-start">
                                                <div class="bestsellers_image"><img src="@FrontCoverSrc"  style="height:130px" alt=""></div>
                                                <div class="bestsellers_content">
                                                    <div class="bestsellers_category"><a href="#">@fbook.Categories</a></div>
                                                    <div class="bestsellers_name"><a href="@Url.Action("ViewBook","Book",new { id= fbook.Id })">@fbook.Name</a></div>
                                                    <div class="rating_r rating_r_4 bestsellers_rating">
                                                    </div>
                                                    @*<div class="bestsellers_price discount">$225<span>$300</span></div>*@
                                                </div>
                                            </div>
                                            <div class="bestsellers_fav"><i class="fas fa-heart"></i></div>
                                            <ul class="bestsellers_marks">
                                                <li class="bestsellers_mark bestsellers_discount">-25%</li>
                                                <li class="bestsellers_mark bestsellers_new">new</li>
                                            </ul>
                                        </div>
                                    }
                                }
                            }

                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>
