
@model eLibrarySystem.Areas.Admin.ViewModels.HomeModel
@using System.Web.Optimization;


<!-- Product Panel -->
<div class="product_grid">
    <div class="product_grid_border"></div>
    @{
        if (Model.BookCollections != null)
        {
            foreach (var featuredbook in Model.BookCollections)
            {
                string FrontCoverBase64 = Convert.ToBase64String(featuredbook.FrontCover);
                string FrontCoverSrc = string.Format("data:image/gif;base64,{0}", FrontCoverBase64);
                string BackCoverBase64 = Convert.ToBase64String(featuredbook.BackCover);
                string BackCoverSrc = string.Format("data:image/gif;base64,{0}", BackCoverBase64);
                <div class="product_item">
                    <div class="product_border"></div>
                    <div class="product_image d-flex flex-column align-items-center justify-content-center"><img src="@FrontCoverSrc" style="height:160px" alt="image"></div>
                    <div class="product_content">
                        <div class="product_price" style="font-size:10px">@featuredbook.Author</div>
                        <div class="product_name"><div><a href="@Url.Action("ViewBook","Book",new { id= featuredbook.Id })" tabindex="0">@featuredbook.Name</a></div></div>
                    </div>
                    <div class="product_fav" data-id="@featuredbook.Id"><i class="fas fa-heart"></i></div>
                    <ul class="product_marks">
                        <li class="product_mark product_discount">-25%</li>
                        <li class="product_mark product_new">new</li>
                    </ul>
                </div>

            }
        }
    }
</div>

