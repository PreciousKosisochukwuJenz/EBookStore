@model eLibrarySystem.Areas.Admin.ViewModels.BookVM
@{
    ViewBag.Title = "Book Store";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using System.Web.Optimization;
@{
    string FrontCoverBase64 = Convert.ToBase64String(Model.FrontCover);
    string FrontCoverSrc = string.Format("data:image/gif;base64,{0}", FrontCoverBase64);
    string BackCoverBase64 = Convert.ToBase64String(Model.BackCover);
    string BackCoverSrc = string.Format("data:image/gif;base64,{0}", BackCoverBase64);
}
@Styles.Render("~/Content/homestyle")

@Styles.Render("~/Content/owl-carousel")
@Styles.Render("~/Content/owl-theme")
@Styles.Render("~/Content/animate")
@Styles.Render("~/Content/BookView_responsive")
@Styles.Render("~/Content/BookView_styles")


<div class="single_product">
    <div class="container">
        <div class="row">

            <!-- Images -->
            <div class="col-lg-2 order-lg-1 order-2">
                <ul class="image_list">
                    <li data-image="@FrontCoverSrc"><img src="@FrontCoverSrc"  style="height:160px" alt=""></li>
                    <li data-image="@BackCoverSrc"><img src="@BackCoverSrc" style="height:160px" alt=""></li>
                </ul>
            </div>

            <!-- Selected Image -->
            <div class="col-lg-5 order-lg-2 order-1">
                <div class="image_selected"><img src="@FrontCoverSrc" style="height:500px" alt=""></div>
            </div>

            <!-- Description -->
            <div class="col-lg-5 order-3">
                <div class="product_description">
                    <div class="product_category">@Model.Categories</div>
                    <div class="product_name">@Model.Name</div>
                    <div class="rating_r rating_r_4 product_rating">
                        <select id="css-stars">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                    </div>
                    <div class="product_text">@Html.Raw(Model.Description)</div>
                    <div class="order_info d-flex flex-row">
                        <form action="#">
                            <div class="clearfix" style="z-index: 1000;">

                                <!-- Product Quantity -->
                                <div class="product_quantity clearfix">
                                    <span>Quantity: </span>
                                    <input id="quantity_input" type="text" pattern="[0-9]*" value="1">
                                    <div class="quantity_buttons">
                                        <div id="quantity_inc_button" class="quantity_inc quantity_control"><i class="fas fa-chevron-up"></i></div>
                                        <div id="quantity_dec_button" class="quantity_dec quantity_control"><i class="fas fa-chevron-down"></i></div>
                                    </div>
                                </div>

                            </div>
                            <div class="button_container">
                                <button type="button" class="button cart_button btn-hover-shine  btn-shadow">Add to Cart</button>
                                <div class="product_fav"><i class="fas fa-heart"></i></div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
@section Scripts{
    @Scripts.Render("~/bundles/book-custom")
    }