@using System.Web.Optimization;
@model eLibrarySystem.Areas.Admin.ViewModels.HomeModel
@{
    ViewBag.Title = "Book Store";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/homestyle")
<div class="app-main__inner">
    <div class="app-page-title app-page-title-simple">
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div>
                    <div class="page-title-head center-elem">
                        <span class="d-inline-block pr-2">
                            <i class="lnr-apartment icon-gradient bg-mean-fruit"></i>
                        </span>
                        <span class="d-inline-block">Main Home page</span>
                    </div>
                    <div class="page-title-subheading opacity-10">
                        <nav class="" aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a>
                                        <i aria-hidden="true" class="fa fa-home"></i>
                                    </a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a>Home</a>
                                </li>
                                <li class="active breadcrumb-item" aria-current="page">
                                    Home
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row" id="FeaturedBooks">
        @Html.Partial("_Loader")
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/homeutil")
    <script>
        $(document).ready(function () {
            initBanner2Slider();
            $("#FeaturedBooks").load('@Url.Action("GetFeaturedBooks","Home", new { area = "" })' ,"", function (responseText, textStatus, XMLHttpRequest) {
                $("#Loader").hide();
                initFavs();
            });
        });
    </script>

}
