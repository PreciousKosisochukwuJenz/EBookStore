@using System.Web.Optimization;
@model eLibrarySystem.Areas.Admin.ViewModels.BookVM
@{
    ViewBag.Title = "Add Book";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="app-main__inner">
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <div class="main-card mb-3 card">
                @using (Html.BeginForm("AddBook", "Book", FormMethod.Post, new { area = "Admin", @class = "validate", novalidate = true, enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="card-body">
                        <div id="smartwizard2" class="forms-wizard-alt">
                            <ul class="forms-wizard">
                                <li>
                                    <a href="#step-12">
                                        <em>1</em><span>Basic Information</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#step-22">
                                        <em>2</em><span>Upload Information</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#step-32">
                                        <em>3</em><span>Finish </span>
                                    </a>
                                </li>
                            </ul>
                            <div class="form-wizard-content">
                                <div id="step-12">
                                    <div class="form-row">
                                        <div class="col-md-6">
                                            <div class="position-relative form-group">
                                                <label for="Name">Title of book</label>
                                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Title", required = true } })
                                                <div class="invalid-feedback">
                                                    Title required
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="position-relative form-group">
                                                <label for="Author">Author</label>
                                                @Html.EditorFor(model => model.Author, new { htmlAttributes = new { @class = "form-control", placeholder = "Author", required = true } })
                                                <div class="invalid-feedback">
                                                    Author required
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="position-relative form-group">
                                                <label for="ISBN">ISBN</label>
                                                @Html.EditorFor(model => model.ISBN, new { htmlAttributes = new { @class = "form-control", placeholder = "ISBN", required = true } })
                                                <div class="invalid-feedback">
                                                    ISBN required
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="position-relative form-group">
                                                <label for="examplePassword22">Category</label>
                                                @Html.DropDownListFor(model => model.CategoryID, (IEnumerable<SelectListItem>)ViewBag.Category, "-- Select category --", new { @class = "form-control", required = true })
                                                <div class="invalid-feedback">
                                                    Category required
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="position-relative form-group">
                                                <label for="BookFormat">Book Format</label>
                                                @Html.EnumDropDownListFor(model => model.BookFormat, "-- Select book format --", new { @class = "form-control", required = true })
                                                <div class="invalid-feedback">
                                                    Book format required
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="position-relative form-group">
                                                <label for="examplePassword22">Content Format</label>
                                                @Html.EnumDropDownListFor(model => model.ContentFormat, "-- Select content format --", new { @class = "form-control", required = true })
                                                <div class="invalid-feedback">
                                                    Content format required
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="col-md-4">
                                            <div class="position-relative form-group">
                                                <label for="Edition">Edition</label>
                                                @Html.EditorFor(model => model.Edition, new { htmlAttributes = new { @class = "form-control", placeholder = "Edition", required = true } })
                                                <div class="invalid-feedback">
                                                    Edition required
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="position-relative form-group">
                                                <label for="Publisher">Publisher</label>
                                                @Html.EditorFor(model => model.Publisher, new { htmlAttributes = new { @class = "form-control", placeholder = "Publisher", required = true } })
                                                <div class="invalid-feedback">
                                                    Publisher required
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="position-relative form-group">
                                                <label for="YearPublished">Year published</label>
                                                @Html.EditorFor(model => model.YearPublished, new { htmlAttributes = new { @class = "form-control", placeholder = "Pick year", required = true, data_toggle = "datepicker-year" } })
                                                <div class="invalid-feedback">
                                                    Year published required
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="position-relative form-group">
                                        <label for="CategoryID">Sub-categories</label>
                                        @Html.DropDownListFor(model => model.SubCategories, (IEnumerable<SelectListItem>)ViewBag.SubCategory, "-- Select category --", new { @class = "form-control multiselect-dropdown", required = true, multiple = "true" })
                                        <div class="invalid-feedback">
                                            Sub category required
                                        </div>
                                    </div>
                                    <div class="position-relative form-group">
                                        <label for="Description">Description</label>
                                        @Html.TextAreaFor(model => model.Description, 5, 0, new { @class = "form-control", placeholder = "Description", required = true })
                                        <div class="invalid-feedback">
                                            Description required
                                        </div>
                                    </div>
                                </div>
                                <div id="step-22">
                                    <div id="accordion" class="accordion-wrapper mb-3">
                                        <div class="card">
                                            <div id="headingTwo" class="b-radius-0 card-header">
                                                <button type="button" data-toggle="collapse" data-target="#collapseFront" aria-expanded="false"
                                                        aria-controls="collapseTwo"
                                                        class="text-left m-0 p-0 btn btn-link btn-block">
                                                    <span class="form-heading">Front Cover<p>Image must be 564x464</p></span>
                                                </button>
                                            </div>
                                            <div data-parent="#accordion" id="collapseFront"
                                                 class="collapse show">
                                                <div class="card-body">
                                                    <div class="position-relative form-group">
                                                        <img class="img-responsive img-thumbnail img-fluid d-block" id="FrontPage" src="#" onchange="ShowPreview(this)" onerror="this.src='/Contents/images/images.png'" alt="Favicon" />
                                                        <div class="custom-file">
                                                            <input type="file" class="custom-file-input" id="FrontInp" name="FrontPage" required />
                                                            <label class="custom-file-label" for="customFile">Select file</label>
                                                            <div class="invalid-feedback">
                                                                Front cover required
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div id="accordion" class="accordion-wrapper mb-3">
                                        <div class="card">
                                            <div id="headingTwo" class="b-radius-0 card-header">
                                                <button type="button" data-toggle="collapse" data-target="#collapseBack" aria-expanded="false"
                                                        aria-controls="collapseTwo"
                                                        class="text-left m-0 p-0 btn btn-link btn-block">
                                                    <span class="form-heading">Back Cover<p>Image must be 564x464</p></span>
                                                </button>
                                            </div>
                                            <div data-parent="#accordion" id="collapseBack"
                                                 class="collapse show">
                                                <div class="card-body">
                                                    <div class="position-relative form-group">
                                                        <img class="img-responsive img-thumbnail  img-fluid d-block" id="BackPage" src="#" onchange="ShowPreview(this)" onerror="this.src='/Contents/images/images.png'" alt="Favicon" />
                                                        <div class="custom-file">
                                                            <input type="file" class="custom-file-input" id="BackInp" name="BackPage" required />
                                                            <label class="custom-file-label" for="customFile">Select file</label>
                                                            <div class="invalid-feedback">
                                                                Back Cover required
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <table style="width: 100%;" class="table table-hover table-striped">
                                        <tbody>
                                            <tr class="">
                                                <td>Is Featured?</td>
                                                <td style="width:60px">
                                                    @Html.CheckBoxFor(model => model.IsFeatured, new { data_toggle = "toggle", data_size = "normal", data_on = "Yes", data_off = "No", data_onstyle = "success", data_offstyle = "danger", id = "IsFeatured" })
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <div id="step-32">
                                    <div class="no-results">
                                        <div class="swal2-icon swal2-success swal2-animate-success-icon">
                                            <div class="swal2-success-circular-line-left" style="background-color: rgb(255, 255, 255);"></div>
                                            <span class="swal2-success-line-tip"></span>
                                            <span class="swal2-success-line-long"></span>
                                            <div class="swal2-success-ring"></div>
                                            <div class="swal2-success-fix" style="background-color: rgb(255, 255, 255);"></div>
                                            <div class="swal2-success-circular-line-right" style="background-color: rgb(255, 255, 255);"></div>
                                        </div>
                                        <div class="results-subtitle mt-4">Finished!</div>
                                        <div class="results-title">You arrived at the last form wizard step!</div>
                                        <div class="mt-3 mb-3"></div>
                                        <div class="text-center">
                                            <button class="btn-shadow btn-wide btn btn-success btn-lg" type="submit">Finish</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="divider"></div>
                        <div class="clearfix">
                            <button type="button" id="reset-btn2" class="btn-shadow float-left btn btn-link">Reset</button>
                            <button type="button" id="next-btn2" class="btn-shadow btn-wide float-right btn-pill btn-hover-shine btn btn-primary">Next</button>
                            <button type="button" id="prev-btn2" class="btn-shadow float-right btn-wide btn-pill mr-3 btn btn-outline-secondary">Previous</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jquery-ajax")
    @Scripts.Render("~/bundles/previewer")
    @Scripts.Render("~/bundles/validation")
    @Scripts.Render("~/bundles/timymc")
    @Scripts.Render("~/bundles/editor")
}